<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/profiles.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />

    <title><%= favourites[0].username %>'s Profile</title>
  </head>
  <body>
    <h1><%= favourites[0].username %>'s Profile</h1>
    <div class="images_container">
      <% if (favourites.length > 0) { %>
      <h2> <%= favourites[0].username %>'s favourite maps:</h2>
        <div class="row">
           <% for (let i = 0; i < favourites.length; i++) { %>
           <div class="square">
              <h2><%= favourites[i].name %></h2>
              <img src="<%= favourites[i].image_url%>" />
           </div>
        <% } %>
        </div>
      <% } else { %>

      <h2> <%= favourites[0].username %>'s favourite maps:</h2>
        <div class="row">
          <div class="square">
              No favourite maps found.
              <img src = "https://www.iconpacks.net/icons/2/free-sad-face-icon-2691-thumb.png"/>
          </div>
      <% } %>
        </div>
    </div>
      <div class="images_container">
      <h2>Maps <%=favourites[0].username %> contributed to:</h2>
        <div class="row">
          <% for (let i = 0; i < contributions.length; i++) { %>
            <div class="square">
              <h2><%= contributions[i].name %></h2>
              <img src="<%= contributions[i].image_url%>" />
            </div>
          <% } %>
        </div>
    </div>
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
